<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="login"
            type="com.treecute.plant.viewmodel.LoginViewModel">
        </variable>
    </data>

    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/login">

        <android.support.design.widget.AppBarLayout
            app:elevation="0dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:id="@+id/appBarLayout2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>



            <EditText
                android:maxLines="1"
                android:theme="@style/editText"
                android:textColor="@color/white"
                android:layout_width="320dp"
                android:layout_height="60dp"
                android:hint="用户名"
                android:afterTextChanged="@{login.afterUsernameInput}"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
                android:layout_marginLeft="8dp"
                android:id="@+id/editText2"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />




            <EditText
                android:maxLines="1"
                android:theme="@style/editText"
                android:textColor="@color/white"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:hint="密码"
                android:afterTextChanged="@{login.afterPasswordInput}"
                android:textSize="15sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/editText2"
                android:layout_marginLeft="8dp"
                android:id="@+id/editText3"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />


        <com.rey.material.widget.Button
            android:id="@+id/login_btn"
            android:text="登录"
            android:onClick="@{login::login}"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/sign_up_btn"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:layout_alignParentBottom="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editText3"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.189">


        </com.rey.material.widget.Button>


    </android.support.constraint.ConstraintLayout>

</layout>